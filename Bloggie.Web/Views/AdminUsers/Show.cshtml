@model Bloggie.Web.Models.ViewModels.UserViewmodel
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show All Users-Admin Functionality</h1>
    </div>
</div>

<div>
    <div class="container">

        @if (Model.Users is not null || Model.Users.Any())
        {
            
        
        <table class="table">
            <thead>
                <tr>
					<th>Id</th>
					<th>UserName</th>
					<th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var user in Model.Users)
                {
                    <tr>
                        <th>@user.Id</th>
                        <th>@user.UserName</th>
                        <th>@user.EmailAddress</th>
                    </tr>
                    
                }
                
            </tbody>
            </table>
        }
        else
        {
            <p>No users found!</p>
        }
    </div>
</div>



